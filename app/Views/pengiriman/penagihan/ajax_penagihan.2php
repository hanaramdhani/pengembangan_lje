    <script>
        const data = [];

        const rows = () => {
            let html = '';
            for (let i = 0; i < data.length; i++) {
                html += `<tr>`;
                html += `<td>${i+1}</td>`
                for (let j = 0; j < data[i].length; j++) {
                    html += `<td>${data[i][j]}</td>`;
                }
                html += `</tr>`;
            }

            return html;
        }

